#!/usr/bin/make -f
# -*- makefile -*-
# Debhelper build instructions for timelimit.

CFLAGS+=	-Wall -W
ifneq (,$(filter werror,$(DEB_BUILD_OPTIONS)))
	CFLAGS+=	-Werror
endif
ifeq (,$(filter nohardening,$(DEB_BUILD_OPTIONS)))
export DEB_BUILD_HARDENING=1
else
export DEB_BUILD_HARDENING=0
endif

build: build-stamp

build-stamp:
	dh_testdir
	$(MAKE) PREFIX=/usr ETCDIR=/etc MANDIR=/usr/share/man/man
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	$(MAKE) clean
	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	$(MAKE) install PREFIX=/usr ETCDIR=/etc MANDIR=/usr/share/man/man BINGRP=root MANGRP=root DESTDIR=$(CURDIR)/debian/timelimit


# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs ChangeLog
	dh_installdocs
	dh_strip
	dh_compress
	dh_fixperms
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
